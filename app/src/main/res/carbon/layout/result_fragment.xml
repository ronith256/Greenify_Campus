<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_wPink">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/bg_pink"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="35dp">

            <TextView
                android:id="@+id/result_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ambition"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="@string/your_emission"
                android:textAlignment="center"
                android:textColor="@color/text_grey"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.096"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resultAnimCheck"
                app:layout_constraintVertical_bias="0.252" />

            <TextView
                android:id="@+id/result_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ambition"
                android:gravity="end"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text=""
                android:textAlignment="gravity"
                android:textColor="@color/text_grey"
                android:textSize="54sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.961"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/result_a"
                app:layout_constraintVertical_bias="0.118" />

            <TextView
                android:id="@+id/result_a5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ambition"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="than an average Indian"
                android:textAlignment="center"
                android:textColor="@color/text_grey"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result_a"
                app:layout_constraintVertical_bias="0.625" />

            <TextView
                android:id="@+id/result_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ambition"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text="@string/your_average"
                android:textAlignment="center"
                android:textColor="@color/text_grey"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result_a"
                app:layout_constraintVertical_bias="0.404" />

            <TextView
                android:id="@+id/result_a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ambition"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/text_grey"
                android:textSize="60sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.958"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/resultAnimCheck"
                app:layout_constraintVertical_bias="0.602" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/resultAnimCheck"
                android:layout_width="204dp"
                android:layout_height="98dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:lottie_autoPlay="false"
                app:lottie_fileName="stars_3.json"
                app:lottie_loop="false"
                app:lottie_speed="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>